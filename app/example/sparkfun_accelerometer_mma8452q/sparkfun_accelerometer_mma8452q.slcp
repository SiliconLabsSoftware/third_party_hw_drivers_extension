project_name: sparkfun_accelerometer_mma8452q
label: Third Party Hardware Drivers - MMA8452Q - Triple Axis Accelerometer Breakout (Sparkfun)
package: platform
description: |
  This example project shows an example for Sparkfun Triple Axis Accelerometer Breakout board driver integration.
category: Example|Platform
quality: evaluation

filter:
  - name: Device Type
    value: [SoC]
  - name: MCU
    value: [32-bit MCU]
  - name: Project Difficulty
    value: [Beginner]

source:
  - path: app.c
  - path: main.c

include:
  - path: ''
    file_list:
    - path: app.h

component:
  - id: sl_system
  - id: device_init
  - id: iostream_usart
    instance: [vcom]
  - id: i2cspm
    instance: [qwiic]
  - id: app_log
  - id: sparkfun_accelerometer_mma8452q
    from: third_party_hw_drivers

toolchain_settings:
  - option: gcc_linker_option
    value: "-u _printf_float"

define:
  - name: DEBUG_EFM

sdk_extension:
  - id: third_party_hw_drivers
    version: 4.1.0

readme:
  - path: ../../documentation/example/sparkfun_accelerometer_mma8452q/README.md

other_file:
