  - name: sleeptimer
  - name: mipi_dbi_spi
config_file:
  - path: public/silabs/tft_lcd_hxd8357d/config/brd2601b/adafruit_hxd8357d_spi_config.h
    file_id: adafruit_hxd8357d_config
